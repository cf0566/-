<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        style="@style/title_style"
        android:gravity="center_vertical" >

        <ImageView
            android:id="@+id/activity_add_import_check_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@android:drawable/ic_btn_speak_now" />

        <TextView
            android:id="@+id/activity_add_import_check_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="重点部位项添加"
            android:textColor="#FFF"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/activity_add_import_check_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="保存"
            android:textColor="#FFF"
            android:textSize="15sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFF"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="15dp" >

        <TextView
            android:id="@+id/activity_add_import_check_tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="添加检查区域"
            android:textSize="13sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="*"
            android:textColor="#F00" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:background="@drawable/spinner_background"
            android:layout_marginLeft="20dp" 
            android:text="请选择区域"
            android:gravity="center_vertical"
            android:drawableRight="@android:drawable/ic_btn_speak_now"
            />
    </LinearLayout>
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#0E88D5"
        android:gravity="center_vertical"
        android:padding="15dp"
        >
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请选择检查项:"
            android:textColor="#FFF"
            android:textSize="15sp"
            />
        <RadioGroup 
            android:id="@+id/activity_add_import_check_rgroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            >
            <RadioButton 
                android:id="@+id/activity_add_import_check_rbtn_genenal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rbtn_check"
                android:text="一般检查项"
                android:singleLine="true"
                android:layout_weight="1"
                android:checked="true"
                android:gravity="center"
                android:padding="5dp"
                android:button="@null"
                android:textColor="@drawable/rbtn_text_check"
                />
            <RadioButton 
                android:id="@+id/activity_add_import_check_rbtn_profess"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rbtn_check"
                android:text="专业检查项"
                android:singleLine="true"
                android:gravity="center"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:padding="5dp"
                android:button="@null"
                android:textColor="@drawable/rbtn_text_check"
                />
            
        </RadioGroup>
        
    </LinearLayout>
    

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#E3F4FE"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="10dp" >

        <TextView
            android:id="@+id/activity_add_import_check_tv_deface"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="15sp"
            android:text="1.防火、防烟分区" />

        <CheckBox
            android:id="@+id/activity_add_import_check_cbox_deface"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#F9F9F9"
        >
    <CheckBox
        android:id="@+id/activity_add_import_check_cbox_item1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="防火、防烟分区符合规范"
        android:textColor="#5B5B5B"
        android:layout_marginLeft="15sp"
        />
    
    <TextView 
        style="@style/my_divide_line"
        android:layout_marginLeft="15sp"
        android:layout_marginRight="15sp"
        />
    <CheckBox
        android:id="@+id/activity_add_import_check_cbox_item2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="防火隔墙"
        android:textColor="#5B5B5B"
        android:layout_marginLeft="15sp"
        />
    </LinearLayout>
    
     <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#E3F4FE"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="10dp" >

        <TextView
            android:id="@+id/activity_add_import_check_tv_heat"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="15sp"
            android:text="2.建筑结构的耐火特性" />

        <CheckBox
            android:id="@+id/activity_add_import_check_cbox_heat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#F9F9F9"
        >
    <CheckBox
        android:id="@+id/activity_add_import_check_cbox_item3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="建筑结构的燃烧特性和耐火极限符合设计要求"
        android:singleLine="true"
        android:textColor="#5B5B5B"
        android:layout_marginLeft="15sp"
        />
    
    <TextView 
        style="@style/my_divide_line"
        android:layout_marginLeft="15sp"
        android:layout_marginRight="15sp"
        />
    <CheckBox
        android:id="@+id/activity_add_import_check_cbox_item4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="使用性质"
        android:textColor="#5B5B5B"
        android:layout_marginLeft="15sp"
        />
    </LinearLayout>
    
    

</LinearLayout>