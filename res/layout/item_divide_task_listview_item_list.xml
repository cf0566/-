<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="#F9F9F9">
    
    <CheckBox 
        android:id="@+id/item_divide_task_listview_item_cbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="装修设计报告"
        android:textColor="#595959"
        android:padding="10dp"
        android:focusable="false"
        android:clickable="false"
        />

     <LinearLayout 
        android:id="@+id/item_divide_task_listview_item_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#F9F9F9"
        android:padding="10dp"
        android:visibility="gone"
        >
        <TextView 
            android:id="@+id/item_divide_task_listview_item_tv_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="资料检查、变配电室"
            android:textColor="#919191"
            android:layout_weight="1"
            android:singleLine="true"
            android:ellipsize="end"
            android:textSize="13sp"
            />
        <TextView 
             android:id="@+id/item_divide_task_listview_item_tv_change"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="修改"
             android:textColor="#FF6100"
             android:textSize="13sp"
            />
        
    </LinearLayout>
    
</LinearLayout>
